{
  "name": "website",
  "version": "1.0.0",
  "description": "website",
  "keywords": [
    "website"
  ],
  "license": "ISC",
  "author": "Niv Guler",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.5.2",
  "scripts": {
    "dev": "turbo dev",
    "dev:client-example": "turbo dev --filter=client-example",
    "dev:server-example": "turbo dev --filter=server-example",
    "dev:full-stack-example": "turbo dev --filter=full-stack-example",
    "dev:client-server-example": "turbo dev --filter=client-example --filter=server-example",
    "build": "turbo build",
    "build:client-example": "turbo build --filter=client-example",
    "build:server-example": "turbo build --filter=server-example",
    "build:full-stack-example": "turbo build --filter=full-stack-example",
    "build:utils": "turbo build --filter=@website/utils",
    "test": "vitest",
    "test:client-example": "vitest --project client-example",
    "test:server-example": "vitest --project server-example",
    "test:full-stack-example": "vitest --project full-stack-example",
    "lint": "turbo lint",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "deployer": "cd deployer/app && pnpm install && pnpm run build && pnpm start",
    "deployer:dev": "cd deployer/app && pnpm run dev"
  },
  "lint-staged": {
    "*.{js,ts,vue,json,md}": "prettier --write",
    "*.{js,ts,vue}": "eslint --fix"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.5",
    "@vitejs/plugin-vue": "^6.0.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^4.0.17",
    "vue-eslint-parser": "^10.1.1"
  }
}
