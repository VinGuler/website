# Nixpacks configuration for Railway
# Configures pnpm for monorepo workspace support and prevents npm usage

[phases.setup]
nixPkgs = ["nodejs_20", "pnpm"]

[phases.install]
# Install all workspace dependencies
dependsOn = ["setup"]
cmds = ["pnpm install --frozen-lockfile"]

[phases.build]
dependsOn = ["install"]
cmds = [
  "cd apps/finance-tracker",
  "pnpm run db:generate",
  "pnpm run build"
]

[start]
cmd = "cd apps/finance-tracker && pnpm start"
